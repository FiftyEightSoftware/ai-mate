{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet restore backend/backend.csproj && dotnet publish backend/backend.csproj -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd out && ./backend",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
