{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2021", "DOM"],
    "types": ["node", "@playwright/test"],
    "skipLibCheck": true
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts"
  ]
}
